{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cargo build -Zbuild-std",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run with QEMU",
      "type": "shell",
      "command": "cargo run -Zbuild-std",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run with QEMU with gdb",
      "type": "shell",
      "command": "qemu-arm -L /home/luckfox/sysdrv/source/buildroot/buildroot-2023.02.6/output/host/arm-buildroot-linux-uclibcgnueabihf/sysroot -g 1234 ./target/armv7-unknown-linux-uclibceabihf/debug/luckfox_pico_rust",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}